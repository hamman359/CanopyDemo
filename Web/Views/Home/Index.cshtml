@{
    ViewBag.Title = "Canopy Demo";

	SelectList states = new SelectList((Dictionary<string, string>)ViewBag.States, "value", "value");
}

<form role="form" class="form-horizontal" action="@Url.Action("Index", "Home")" method="post">
	<div class="form-group">
		<label class="control-label col-sm-3">First Name:</label>
		<input type="text" id="FirstName" name="FirstName" class="col-sm-9 form-control" placeholder="Joe" required />
	</div>
	<div class="form-group">
		<label class="control-label col-sm-3">Last Name:</label>
		<input type="text" id="LastName" name="LastName" class="col-sm-9 form-control" placeholder="Smith" required />
	</div>
	<div class="form-group">
		<label class="control-label col-sm-3">Address:</label>
		<input type="text" id="Address" name="Address" class="col-sm-9 form-control" placeholder="123 Someplace Dr" required />
	</div>
	<div class="form-group">
		<label class="control-label col-sm-3">City:</label>
		<input type="text" id="City" name="City" class="col-sm-9 form-control" placeholder="Someplace" required />
	</div>
	<div class="form-group">
		<label class="control-label col-sm-3">State:</label>
		@Html.DropDownList("State", states, new { id = "State", @class = "col-sm-9 form-control", required = "required" })
	</div>
	<div class="form-group">
		<label class="control-label col-sm-3">Zip:</label>
		<input type="text" id="Zip" name="Zip" class="col-sm-9 form-control" placeholder="12345" pattern="(\d{5}([\-]\d{4})?)" required />
	</div>
	<div class="form-group">
		<label class="control-label col-sm-3">Email:</label>
		<input type="email" id="Email" name="Email" class="col-sm-9 form-control" placeholder="joe.smith@email.com" required />
	</div>
	<div class="form-group">
		<label class="control-label col-sm-3">Confirm Email:</label>
		<input type="email" id="Confirm" name="Confirm" class="col-sm-9 form-control" placeholder="joe.smith@email.com" required />
	</div>
	<div class="form-group">
		<label class="control-label col-sm-4">Sign up for Newsletter:</label>
			<label>
				<input type="radio" name="SignUp" id="SignUp" value="true">
				Yes
			</label>
			&nbsp;
			<label>
				<input type="radio" name="SignUp" id="SignUp" value="false" checked>
				No
			</label>
	</div>
	<div class="form-group">
		<div class="col-sm-offset-4 col-sm-8">
			<button type="submit" class="btn btn-primary" id="Submit">Submit</button>
		</div>
	</div>
</form>